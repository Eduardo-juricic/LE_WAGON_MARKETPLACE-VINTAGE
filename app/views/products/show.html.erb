<div class="container mt-3">
   <h1 class="mb-4"><%= @product.name %></h1>
   <div class="row">
   <div class="col-md-6">
   <p><strong>Preço:</strong> <%= number_to_currency(@product.price, unit: 'R$ ') %></p>
      <p><strong>Descrição:</strong> <%= @product.description %></p>
      <p><strong>Categoria:</strong> <%= @product.category %></p>
      <p><strong>Tamanho:</strong> <%= @product.size %></p>
      <p><strong>Vendido por:</strong> <%= @product.user.username %></p>
    </div>
    <div class="col-md-6 text-center">
  <% if @product.photo.attached? %>
    <%= image_tag @product.photo, class: "img-fluid", style: "max-width: 300px; height: auto;" %>
  <% else %>
    <p>Sem imagem</p>
  <% end %>
</div>
</div>
<div class="mt-3 d-flex gap-2">
  <% if user_signed_in? && current_user == @product.user %>
    <%= link_to 'Editar', edit_product_path(@product), class: 'btn btn-primary' %>
    <%= link_to 'Deletar', product_path(@product), data: { turbo_method: :delete, turbo_confirm: 'Tem certeza que deseja excluir este produto?' }, class: 'btn btn-danger' %>
  <% end %>
  <%= link_to "Voltar", root_path, class: "btn btn-secondary" %>
</div>
