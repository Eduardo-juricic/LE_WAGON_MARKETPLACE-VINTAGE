<div class="d-flex flex-column align-items-center container-login">
  <h2 class="text-center mb-4">Vender Produto</h2>

  <%= simple_form_for @product, html: { multipart: true } do |f| %>
    <div class="form-inputs">
      <%= f.input :name, label: "Nome do produto", input_html: { class: "form-control", placeholder: "Digite o nome do produto" } %>
      <%= f.input :price, label: "Preço (R$)", input_html: { class: "form-control", step: 0.01, placeholder: "Digite o preço" } %>
      <%= f.input :description, label: "Descrição", as: :text, input_html: { class: "form-control", placeholder: "Descreva o produto" } %>
      <%= f.input :category, label: "Categoria", input_html: { class: "form-control", placeholder: "Selecione a categoria" } %>
      <%= f.input :size, label: "Tamanho", input_html: { class: "form-control", placeholder: "Informe o tamanho" } %>
      <%= f.input :photo, as: :file, label: "Imagem do Produto", input_html: { class: "form-control" } %>
    </div>

    <div class="d-grid gap-2 mt-3">
      <%= f.submit "Criar produto", class: "btn btn-success btn-block btn-editar" %>
    </div>
  <% end %>

  <%= link_to "Voltar", root_path, class: "btn btn-secondary mt-3 btn-voltar" %>
</div>
