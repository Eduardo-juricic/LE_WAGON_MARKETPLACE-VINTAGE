<div class="mt-5">
  <div class="d-flex flex-column align-items-center container-login">
    <h2 class="text-center mb-4">Sign Up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :username,
                    required: true,
                    autofocus: true,
                    input_html: { class: "form-control", placeholder: "Digite seu nome de usuÃ¡rio" } %>

        <%= f.input :email,
                    required: true,
                    input_html: { class: "form-control", autocomplete: "email", placeholder: "Digite seu e-mail" } %>

        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { class: "form-control", autocomplete: "new-password", placeholder: "Digite sua senha" } %>

        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { class: "form-control", autocomplete: "new-password", placeholder: "Confirme sua senha" } %>
      </div>

      <div class="d-grid gap-2">
        <%= f.button :submit, "Sign up", class: "btn btn-primary btn-block btn-info" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
