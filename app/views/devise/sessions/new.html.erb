<div class="mt-5">
  <div class="d-flex flex-column align-items-center container-login">
    <h2 class="text-center mb-4">Login</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { class: "form-control", autocomplete: "email", placeholder: "Digite seu e-mail" } %>

        <%= f.input :password,
                    required: false,
                    input_html: { class: "form-control", autocomplete: "current-password", placeholder: "Digite sua senha" } %>
      </div>

      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

      <div class="d-grid gap-2">
        <%= f.button :submit, "Entrar", class: "btn btn-primary btn-block btn-info" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
